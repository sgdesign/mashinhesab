<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/txt_input"
            style="@style/HistoryText.Query"
            android:text="1+1+1+3+4+1212/123123+2312" />

        <TextView
            android:id="@+id/txt_result"
            style="@style/HistoryText.Result"
            android:text="1221313221312" />

        <!--<io.github.kexanie.library.MathView-->
        <!--android:id="@+id/tex_result"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_gravity="right"-->
        <!--app:engine="KaTeX" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="right"
            android:background="?colorAccent"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_mode_edit_white_24dp" />

            <ImageView
                android:id="@+id/img_delete_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_delete_white_48dp" />

            <ImageView
                android:id="@+id/img_copy_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_content_copy_white_24dp" />

            <ImageView
                android:id="@+id/img_share_item"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@drawable/ic_share_white_24dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
