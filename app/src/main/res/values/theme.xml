<resources>


    <!-- Dark theme. -->
    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorResultError">#ff4081</item>
        <item name="colorClearScreen">#FF536DFE</item>
        <item name="textFunctionHintStyle">@style/AppTheme.TextFunctionHint</item>
        <item name="buttonDigitStyle">@style/AppTheme.BaseButton</item>
        <item name="buttonEqualStyle">@style/AppTheme.ButtonEqualStyle</item>
        <item name="buttonDeleteStyle">@style/AppThemeDark.ButtonDeleteStyle</item>
        <item name="buttonOptStyle">@style/AppTheme.BaseButton</item>
        <item name="buttonClearStyle">@style/AppTheme.ButtonClearStyle</item>
        <item name="buttonSmallDigitStyle">@style/AppTheme.ButtonDigitStyle.Small</item>
        <item name="textEquationStyle">@style/AppTheme.TextEquationStyle</item>
        <item name="graphPanelStyle">@style/AppThemeDark.GraphPanelStyle</item>
        <item name="backgroundDeleteButton">@drawable/ic_backspace_white_24dp</item>
        <item name="buttonAdvanceStyle">@style/AppTheme.ButtonAdvanceStyle</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButtonStyle</item>
        <item name="background_pad_numeric">@color/blue_grey_800</item>
        <item name="text_pad_basic_color">@color/white</item>
        <item name="text_pad_advance_color">@color/white</item>

        <item name="imageTintColor">@color/white</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#0097A7</item>
        <item name="colorAccent">#7C4DFF</item>

        <item name="textFunctionHintStyle">@style/AppTheme.TextFunctionHint</item>
        <item name="colorResultError">@color/pink_accent_200</item>
        <item name="colorClearScreen">@color/indigo_accent_200</item>
        <item name="buttonDigitStyle">@style/AppTheme.BaseButton</item>
        <item name="buttonEqualStyle">@style/AppTheme.ButtonEqualStyle</item>
        <item name="buttonDeleteStyle">@style/AppThemeDark.ButtonDeleteStyle</item>
        <item name="buttonOptStyle">@style/AppTheme.BaseButton</item>
        <item name="buttonClearStyle">@style/AppTheme.ButtonClearStyle</item>
        <item name="buttonSmallDigitStyle">@style/AppTheme.ButtonDigitStyle.Small</item>
        <item name="textEquationStyle">@style/AppTheme.TextEquationStyle</item>
        <item name="graphPanelStyle">@style/AppThemeDark.GraphPanelStyle</item>
        <item name="backgroundDeleteButton">@drawable/ic_backspace_black_24dp</item>
        <item name="buttonAdvanceStyle">@style/AppTheme.ButtonAdvanceStyle</item>
        <item name="imageButtonStyle">@style/AppTheme.ImageButtonStyle</item>
        <item name="background_pad_numeric">@color/blue_grey_800</item>
        <item name="text_pad_basic_color">@color/white</item>
        <item name="text_pad_advance_color">@color/white</item>

        <item name="imageTintColor">@color/black</item>
    </style>
    <!--Theme gradient-->

    <style name="AppTheme.Gradient" parent="AppThemeLight">
        <item name="background_pad_numeric">@drawable/gradient_under_the_lake</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>


    <!--Theme Indigo-->
    <style name="AppTheme.Indigo" parent="AppThemeLight">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>


    <!--Theme Brown-->
    <style name="AppTheme.Brown" parent="AppThemeDark">
        <item name="colorPrimary">#795548</item>
        <item name="colorPrimaryDark">#5D4037</item>
        <item name="colorAccent">#03A9F4</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>

    <!--Theme Red-->
    <style name="AppTheme.Red" parent="AppThemeDark">
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
        <item name="colorAccent">#FFEB3B</item>
        <item name="textButtonColor">#FFFFFF</item>
        <item name="backgroundDeleteButton">@drawable/ic_backspace_white_24dp</item>
    </style>

    <!--Theme pink-->
    <style name="AppTheme.Pink" parent="AppThemeLight">
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C2185B</item>
        <item name="colorAccent">#536DFE</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>

    <!--Theme Purple-->
    <style name="AppTheme.Purple" parent="AppThemeDark">
        <item name="colorPrimary">#9C27B0</item>
        <item name="colorPrimaryDark">#9C27B0</item>
        <item name="colorAccent">#4CAF50</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>

    <!--Theme DeepPurple-->
    <style name="AppTheme.DeepPurple" parent="AppThemeDark">
