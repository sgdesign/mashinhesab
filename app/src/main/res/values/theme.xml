        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF5722</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>


    <!--Theme Blue-->
    <style name="AppTheme.Blue" parent="AppThemeLight">
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#ab47bc</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>

    <!--Theme Cyan-->
    <style name="AppTheme.Cyan" parent="AppThemeLight">
        <item name="colorPrimary">#00BCD4</item>
        <item name="colorPrimaryDark">#0097A7</item>
        <item name="colorAccent">#7C4DFF</item>
    </style>

    <!--Theme Teal-->
    <style name="AppTheme.Teal" parent="AppThemeDark">
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#FF9800</item>
        <item name="textButtonColor">#FFFFFF</item>
    </style>


    <!--Theme Yellow-->
    <style name="AppTheme.Yellow" parent="AppThemeLight">
        <item name="colorPrimary">#FFEB3B</item>
        <item name="colorPrimaryDark">#FBC02D</item>
        <item name="colorAccent">#7C4DFF</item>
        <item name="textButtonColor">#212121</item>
    </style>

    <!--Theme BlueGray-->
    <style name="AppTheme.BlueGray" parent="AppThemeLight">
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#E040FB</item>
        <item name="textButtonColor">#ffffff</item>
    </style>

    <color name="blue_grey_800">#37474f</color>
    <color name="pink_accent_200">#ff4081</color>
    <color name="indigo_accent_200">#FF536DFE</color>
    <color name="white">#FFFFFF</color>


</resources>