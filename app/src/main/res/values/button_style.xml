<resources>
    <color name="background_pad_more_advance">#26a69a</color>

    <style name="AppTheme.BaseButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:typeface">normal</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?text_pad_basic_color</item>
        <item name="android:textSize">@dimen/text_size_button_digit</item>
    </style>

    <style name="AppTheme.ButtonAdvanceStyle" parent="AppTheme.ButtonDigitStyle.Small">
        <item name="android:textColor">?text_pad_advance_color</item>
    </style>

    <style name="AppTheme.ButtonDigitStyle.Small" parent="AppTheme.BaseButton">
        <item name="android:textSize">@dimen/text_size_small_button_digit</item>
    </style>

    <style name="AppTheme.ButtonClearStyle" parent="AppTheme.ButtonDigitStyle.Small">
        <item name="android:scaleType">center</item>
    </style>

    <style name="AppTheme.ButtonEqualStyle" parent="AppTheme.BaseButton">
        <!--<item name="android:background">@drawable/bg_button_equal</item>-->
        <!--<item name="android:background">?colorAccent</item>-->
    </style>

    <style name="AppThemeDark.ButtonDeleteStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:src">?backgroundDeleteButton</item>
    </style>

    <style name="AppTheme.ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="AppTheme.TextEquationStyle" parent="AppTheme.BaseButton">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">center|left</item>
    </style>


</resources>